{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "types/**/*.d.ts",
        "*.d.ts",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
